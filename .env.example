# ==========================================
# Backend Environment Variables (Example)
# Copy this file to .env and fill in actual values
# ==========================================

# ========== DATABASE ==========
DB_HOST=localhost
DB_PORT=5432
DB_NAME=attendance_system
DB_USER=app_user
DB_PASSWORD=secure_password_here

# ========== SERVER ==========
PORT=3000
NODE_ENV=development

# ========== SECURITY ==========
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required_for_security

# ========== CORS ==========
CORS_ORIGIN=*

# ========== FILE UPLOAD ==========
MAX_FILE_SIZE=5242880

# ========== FACE RECOGNITION API (Optional) ==========
# If using external face recognition service
FACE_API_KEY=your_face_api_key_here
FACE_API_URL=https://face-api.example.com
FACE_CONFIDENCE_THRESHOLD=0.95

# ========== QR CODE SERVICE (Optional) ==========
QR_API_KEY=your_qr_api_key_here
QR_API_URL=https://qr-api.example.com

# ========== LOGGING ==========
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ========== EMAIL (Optional) ==========
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ========== REDIS (Optional - for caching) ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========== THIRD PARTY SERVICES ==========
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
