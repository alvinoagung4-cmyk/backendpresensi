# ==========================================
# DEVELOPMENT Environment Variables
# Copy to .env dan update nilai sesuai setup lokal Anda
# ==========================================

# ========== DATABASE (LOCAL) ==========
DB_HOST=localhost
DB_PORT=5433
DB_NAME=projectone
DB_USER=postgres
DB_PASSWORD=postgres

# ========== SERVER ==========
PORT=3001
NODE_ENV=development

# ========== SECURITY ==========
JWT_SECRET=dev_secret_key_minimum_32_chars_for_development_only

# ========== CORS ==========
CORS_ORIGIN=*

# ========== EMAIL (GMAIL) ==========
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_from_gmail

# ========== FACE RECOGNITION (Optional) ==========
FACE_API_KEY=your_api_key_here
FACE_API_URL=https://face-api.example.com

# ========== QR CODE (Optional) ==========
QR_API_KEY=your_api_key_here
QR_API_URL=https://qr-api.example.com

# ========== LOGGING ==========
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ========== REDIS (Optional) ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
